@model IEnumerable<TicariOtomasyon.Models.Siniflar.GrupSinif2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayi</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{ sirano++;} @sirano</td>
                        <td>@x.Departman</td>
                        <td>
                            @if (@x.DepartmanSayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger bg-primary" style="width: 33%"></div>
                                </div>
                            }
                            @if (@x.DepartmanSayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger bg-warning" style="width: 66%"></div>
                                </div>
                            }
                            @if (@x.DepartmanSayi == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger bg-success" style="width: 100%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (@x.DepartmanSayi == 1)
                            {
                                <span class="badge bg-primary">@x.DepartmanSayi</span>
                            }
                            @if (@x.DepartmanSayi == 2)
                            {
                                <span class="badge bg-warning">@x.DepartmanSayi</span>
                            }
                            @if (@x.DepartmanSayi == 3)
                            {
                                <span class="badge bg-success">@x.DepartmanSayi</span>
                            }
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
