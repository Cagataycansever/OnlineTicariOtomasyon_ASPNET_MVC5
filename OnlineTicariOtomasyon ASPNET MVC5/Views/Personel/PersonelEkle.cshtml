@model TicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<div class="card mb-4">
    <div class="card-body">
        <p class="mb-0" style="font-weight:bold;text-align:center;">YENİ PERSONEL EKLE </p>
    </div>
</div>
<br />
@using(Html.BeginForm("PersonelEkle","Personel",FormMethod.Post,new { enctype = "multipart/form-data" })) { 
<form class="form-group" method="post">
    @Html.LabelFor(x => x.PersonelAd)
    @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.PersonelSoyad)
    @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.PersonelGorsel)
    <br />
    <input type="file" name="PersonelGorsel" />
    <br /><br />
    @Html.LabelFor(x => x.Departman)
    @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.prs, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>

</form>
}
