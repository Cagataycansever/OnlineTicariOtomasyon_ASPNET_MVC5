@using TicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<div class="card mb-4">
    <div class="card-body">
        <p class="mb-0" style="font-weight:bold;text-align:center;">KARGO LİSTESİ </p>
    </div>
</div>
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>Kargo Takip No : @Html.TextBox("p") <input type="submit" value="Ara"/></p>
}
<table class="table table-condensed table-hover" style="margin-top:30px;">
    <thead>
        <tr>
            <th scope="col">PERSONEL</th>
            <th scope="col">ALICI</th>
            <th scope="col">TAKİP KODU</th>
            <th scope="col">TARİH</th>
            <th scope="col">DETAYLAR</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Personel</td>
            <td>@x.Alıcı</td>
            <td>@x.TakipKodu</td>
            <td>@x.Tarih.ToString("dd'.'MM'.'yyyy")</td>
            <td><a href="/Kargo/KargoTakip/@x.TakipKodu" class="btn btn-outline-dark"><i class="fas fa-truck"></i></a></td>
        </tr>

    }

</table>

<a href="/Kargo/KargoGonder" class="btn btn-outline-info">Yeni Kargo Girişi</a>