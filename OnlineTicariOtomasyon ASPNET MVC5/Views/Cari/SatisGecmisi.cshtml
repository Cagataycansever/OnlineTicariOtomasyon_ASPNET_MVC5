@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisGecmisi";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<div class="card mb-4">
    <div class="card-body">
        <p class="mb-0" style="font-weight:bold;text-align:center;">CARİ SATIŞ GEÇMİŞİ </p>
    </div>
</div>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">İlgili Cari : @ViewBag.cari</li>
</ol>
<table class="table table-condensed table-hover">
    <thead>
        <tr>
            <th scope="col">SATIŞ ID</th>
            <th scope="col">PERSONEL</th>
            <th scope="col">ÜRÜN</th>
            <th scope="col">FİYAT</th>
            <th scope="col">ADET</th>
            <th scope="col">TOPLAM</th>
            <th scope="col">TARİH</th>
            <th scope="col">YAZDIR</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <th scope="row">@x.SatisId</th>
            <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Fiyat.ToString("C") ₺</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar.ToString("C") ₺</td>
            <td>@x.Tarih.ToString("dd'.'MM'.'yyyy")</td>
            <td><a href="#" class="btn btn-outline-secondary"><i class="fas fa-print"></i> Yazdır</a></td>
        </tr>
    }
</table>

