@model TicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<div class="card mb-4">
    <div class="card-body">
        <p class="mb-0" style="font-weight:bold;text-align:center;">SATIŞ YAP </p>
    </div>
</div>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.UrunId)
    <input type="text" name="UrunId" value="@ViewBag.urun" class="form-control" placeholder="Deneme" readonly />
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.DropDownListFor(x => x.PersonelId, (List<SelectListItem>)ViewBag.personel, new { @class = "form-control" })
    <br />
    @Html.Label("Cari")
    @Html.DropDownListFor(x => x.CariId, (List<SelectListItem>)ViewBag.cari, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Adet)
    <input id="adet" type="number" name="Adet" class="form-control" min="1" placeholder="Adet Girin" onchange="sum();" />
    <br />
    @Html.LabelFor(x => x.Fiyat)
    <input id="fiyat" type="text" name="Fiyat" value="@ViewBag.fiyat" class="form-control" onkeyup="sum();" />
    <br />
    @Html.LabelFor(x => x.ToplamTutar)
    <input id="toplam" type="text" name="ToplamTutar" value="0" class="form-control" readonly />
    <br />
    <button class="btn btn-info">Satış Yap</button>
</form>
<br />
<script>
    function sum() {
        var sayi1 = document.getElementById('adet').value;
        var sayi2 = document.getElementById('fiyat').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(sonuc)) {
            document.getElementById('toplam').value = sonuc;
        }
    }
</script>

