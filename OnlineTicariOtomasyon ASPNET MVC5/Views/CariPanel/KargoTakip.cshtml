@using TicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />
<h2>Kargo Takip</h2>
@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{
    <p>Kargo Takip No : @Html.TextBox("p") <input type="submit" value="Ara" /></p>
}
<table class="table table-condensed table-hover" style="margin-top:30px;">
    <thead>
        <tr>
            <th scope="col">PERSONEL</th>
            <th scope="col">ALICI</th>
            <th scope="col">TAKİP KODU</th>
            <th scope="col">TARİH</th>
            <th scope="col">DETAYLAR</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Personel</td>
            <td>@x.Alıcı</td>
            <td>@x.TakipKodu</td>
            <td>@x.Tarih.ToString("dd'.'MM'.'yyyy")</td>
            <td><a href="/CariPanel/KargoDetay/@x.TakipKodu" class="btn btn-outline-dark"><i class="fas fa-truck">Detaylar</i></a></td>
        </tr>

    }

</table>

